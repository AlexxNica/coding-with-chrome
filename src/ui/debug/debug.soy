{namespace cwc.soy.Debug autoescape="deprecated-contextual"}

/**
 * Debug template.
 */
{template .template}
  {@param prefix: string}
  {@param file_types: ?}
  {@param mode_types: ?}
  <div id="{$prefix}body">
    <h2>Debug screen</h2>

    <h3>File Types</h3>
    <ul>
    {foreach $file_type in keys($file_types)}
      <li><span id="type_{$file_type}">{$file_type}<span></li>
    {/foreach}
    </ul>

    <h3>Mode Types</h3>
    <ul>
    {foreach $mode_type in keys($mode_types)}
      <li><span id="mode_{$mode_type}">{$mode_type}<span></li>
    {/foreach}
    </ul>

    <div id="{$prefix}footer">
     Have fun testing â€¦ ;)
    </div>
  </div>
{/template}


/**
 * Style definitions.
 */
{template .style}
  {@param prefix: string}
  #{$prefix}body {lb}
    border: 1px solid red;
    padding: 10px;
    background: #ccc;
  {rb}

  #{$prefix}left {lb}
    width: 300px;
    float: left;
  {rb}

  #{$prefix}right {lb}
    width: 300px;
    float: right;
  {rb}

  #{$prefix}footer {lb}
    clear: both;
  {rb}
{/template}
