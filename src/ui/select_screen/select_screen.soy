{namespace cwc.soy.SelectScreen autoescape="strict"}


/**
 * General template.
 */
{template .template}
  {@param prefix: string}
  <div id="{$prefix}body" class="mdl-color--grey-200">
    <div id="{$prefix}content"></div>
  </div>
{/template}


/**
 * Welcome screen.
 */
{template .welcome}
  {@param prefix: string}
  <div id="{$prefix}welcome">
    <div class="mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Welcome to Coding with Chrome!</h2>
      </div>
      <div class="mdl-card__supporting-text">
        Coding with Chrome is an Educational Development Environment.<br>
        Before you start coding please select your current coding skill.<br>
      </div>
      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--6-col">
          <div class="mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand">
              <h2 class="mdl-card__title-text">Beginner</h2>
            </div>
            <p><img src="../../images/selection/blockly.png"></p>
            <div class="mdl-card__supporting-text">
              Use an visual block programming editor to drag and drop coding
              blocks to write your code.
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <a id="{$prefix}link-normal-mode" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                Use Normal Mode
              </a>
            </div>
          </div>
        </div>
        <div class="mdl-cell mdl-cell--6-col">
          <div class="mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand">
              <h2 class="mdl-card__title-text">Advanced Coder</h2>
            </div>
            <p><img src="../../images/selection/code_editor.png"></p>
            <div class="mdl-card__supporting-text">
              Use a high-level programming language like JavaScript or
              CoffeeScript to write your code.
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <a id="{$prefix}link-advanced-mode" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                Use Advanced Mode
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="mdl-card__supporting-text">
        You could adjust the selection in the settings menu.
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <label for="{$prefix}show-welcome" class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
          <input type="checkbox" id="{$prefix}show-welcome" class="mdl-checkbox__input">
          <span class="mdl-checkbox__label">Show screen on Startup</span>
       </label>
      </div>
    </div>
  </div>
{/template}


/**
 * Overview page.
 */
{template .advancedOverview}
  {@param prefix: string}

  {call .header}
    {param prefix: $prefix /}
    {param title: 'Welcome to Coding with Chrome!' /}
    {param opt_text: 'Coding with Chrome (advanced)' /}
  {/call}

  <div class="{$prefix}content" id="{$prefix}overview">
    {call .leftpane}
      {param prefix: $prefix /}
    {/call}
  </div>
{/template}


/**
 * Select card design.
 */
{template .selectCard}
  {@param prefix: string}
  {@param title: string}
  {@param text: string}
  {@param link_text: string}
  {@param link_id: string}
  {@param? opt_image: string}
  {@param? opt_color_class: string}

  <div class="mdl-cell mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone mdl-card mdl-shadow--3dp">
    <div class="mdl-card__media{if $opt_color_class} {$opt_color_class}{/if}">
      {if $opt_image}<img src="{$opt_image}">{/if}
    </div>
    <div class="mdl-card__title">
       <h4 class="mdl-card__title-text">{$title}</h4>
    </div>
    <div class="mdl-card__supporting-text">
      <span class="mdl-typography--font-light mdl-typography--subhead">{$text}</span>
    </div>
    <div class="mdl-card__actions">
       <a id="{$prefix}link-{$link_id}" class="android-link mdl-button mdl-js-button mdl-typography--text-uppercase" href="#">
         {$link_text}
         <i class="material-icons">chevron_right</i>
       </a>
    </div>
  </div>
{/template}


/**
 * Left pane of the overview page.
 */
{template .leftpane}
  {@param prefix: string}
  {@param? opt_active: string}
  {@param? opt_colapse: bool}

  <div class="{if opt_colapse}{$prefix}content-pane-colapse{else}{$prefix}content-pane{/if}" id="{$prefix}overview-left">

    {call .subheader}
      {param prefix: $prefix /}
      {param title: 'Code' /}
      {param text: 'Learn how to craft your programs using real programming languages' /}
      {param link: 'code' /}
      {param opt_active: $opt_active /}
      {param opt_class: 'subheader-blue' /}
      {param opt_button_class: 'subject' /}
      {param opt_colapse: $opt_colapse /}
    {/call}

    {call .subheader}
      {param prefix: $prefix /}
      {param title: 'Gallery' /}
      {param text: 'Discover examples of what you can code, and use them to explore programming' /}
      {param link: 'gallery' /}
      {param opt_active: $opt_active /}
      {param opt_class: 'subheader-yellow' /}
      {param opt_button_class: 'photo_library' /}
      {param opt_colapse: $opt_colapse /}
    {/call}

    {call .subheader}
      {param prefix: $prefix /}
      {param title: 'Resources' /}
      {param text: 'Find out everything about Coding with Chrome' /}
      {param link: 'resources' /}
      {param opt_active: $opt_active /}
      {param opt_class: 'subheader-green' /}
      {param opt_button_class: 'device_hub' /}
      {param opt_colapse: $opt_colapse /}
    {/call}
  </div>
{/template}


