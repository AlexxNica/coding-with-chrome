      {param link: 'sphero' /}
      {param opt_class: 'subheader-blue' /}
      {param opt_button_class: 'adjust' /}
    {/call}

    {call .subheader}
      {param prefix: $prefix /}
      {param title: 'Websites' /}
      {param text: 'Create websites using HTML, CSS and JavaScript' /}
      {param link: 'cwc-advanced' /}
      {param opt_class: 'subheader-green' /}
      {param opt_button_class: 'public' /}
    {/call}

    {call .homeSubLink}
      {param prefix: $prefix /}
    {/call}

    </div>
  </div>
{/template}


