/**
 * Header template.
 */
{template .header}
  {@param prefix: string}
  {@param title: string}
  {@param? opt_text: string}
  {@param? opt_class: string}
  <div class="{$prefix}version {$prefix}header{if $opt_class} {$prefix}{$opt_class}{/if}">
    <div class="{$prefix}header-content">
      <h3>{$title}</h3>
      {if $opt_text}<small>{$opt_text}</small>{/if}
    </div>
  </div>
{/template}


/**
 * Subheader template.
 */
{template .subheader}
  {@param prefix: string}
  {@param title: string}
  {@param text: string}
  {@param link: string}
  {@param? opt_active: string}
  {@param? opt_alt: string}
  {@param? opt_class: string}
  {@param? opt_button_class: string}
  {@param? opt_colapse: bool}
  <div id="{$prefix}link-{$link}" class="{$prefix}subheader-item{if $opt_active}{if $opt_active != $link} {$prefix}inactive{/if}{/if}">
    <div class="{$prefix}subheader-button{if $opt_button_class} icon_24px icon_button{/if}{if $opt_class} {$prefix}{$opt_class}{/if}"
         title="{if $title}{$title}{else}{$opt_alt}{/if}">
      {if $opt_button_class}{$opt_button_class}{/if}
    </div>
    {if not $opt_colapse}
      <div class="{$prefix}subheader-copy">
        <h2{if $opt_class} class="{$prefix}{$opt_class}"{/if}>{$title}</h2>
        <span>{$text}</span>
      </div>
    {/if}
  </div>
{/template}


/**
 * Infocard template.
 */
{template .infoCard}
  {@param prefix: string}
  {@param title: string}
  {@param link: string}
  {@param? opt_text: string}
  {@param? opt_image: string}
  {@param? opt_title: string}
  <div id="{$prefix}link-{$link}" class="{$prefix}card-icon">
    {if $opt_image}<img src="../../{$opt_image}" alt="" title="{$opt_title}">{/if}
    <h5>{$title}</h5>
    {if $opt_text}<small>{$opt_text}</small>{/if}
  </div>
{/template}


/**
 * Homelink.
 */
{template .homeLink}
  {@param prefix: string}

  {call .infoCard}
    {param prefix: $prefix /}
    {param title: 'Return to overview' /}
    {param link: 'home' /}
  {/call}
{/template}


/**
 * Home sublink.
 */
{template .homeSubLink}
  {@param prefix: string}

  {call .subheader}
    {param prefix: $prefix /}
    {param title: '' /}
    {param text: '' /}
    {param link: 'home' /}
    {param opt_alt: 'Return to overview' /}
    {param opt_class: 'subheader-red' /}
    {param opt_button_class: 'home' /}
  {/call}
{/template}


/**
 * CSS style definitions.
 */
{template .style}
  {@param prefix: string}

  #{$prefix}body {lb}
    min-height: 100%;
  {rb}

  #{$prefix}welcome {lb}
    padding: 20px;
  {rb}

  #{$prefix}welcome > .mdl-card {lb}
    width: 750px;
    margin: auto;
  {rb}

  #{$prefix}welcome .mdl-cell {lb}
    padding: 10px;
  {rb}

  #{$prefix}welcome .mdl-cell > .mdl-card {lb}
    width: 100%;
  {rb}

  #{$prefix}welcome .mdl-cell > .mdl-card > p {lb}
    margin: auto;
  {rb}

  #{$prefix}welcome .mdl-cell > .mdl-card > .mdl-card__supporting-text {lb}
    min-height: 60px;
  {rb}

  #{$prefix}welcome .mdl-cell > .mdl-card > .mdl-card__actions > a {lb}
    width: 100%;
    box-sizing: border-box;
  {rb}
{/template}
