  <div class="{$prefix}content">

  {call .leftpane}
    {param prefix: $prefix /}
    {param opt_active: 'code' /}
    {param opt_colapse: true /}
  {/call}

    <div class="{$prefix}content-pane" id="{$prefix}overview-right">

   {call .subheader}
      {param prefix: $prefix /}
      {param title: 'Simplified Coding' /}
      {param text: 'Use Coffeescript to create simplified programs' /}
      {param link: 'coffeescript' /}
      {param opt_class: 'subheader-light-blue' /}
      {param opt_button_class: 'local_cafe' /}
    {/call}

   {call .subheader}
      {param prefix: $prefix /}
      {param title: 'Basic Coding' /}
      {param text: 'Use Javascript to create simple functions' /}
      {param link: 'cwc-basic' /}
      {param opt_class: 'subheader-orange' /}
      {param opt_button_class: 'view_stream' /}
    {/call}

    {call .subheader}
      {param prefix: $prefix /}
      {param title: 'Pencil Code' /}
      {param text: 'Draw art, play music or create games' /}
      {param link: 'pencil-code' /}
      {param opt_class: 'header-dodger-blue' /}
      {param opt_button_class: 'mode_edit' /}
    {/call}

    {call .subheader}
      {param prefix: $prefix /}
      {param title: 'LEGO速 MINDSTORMS速 EV3 robot' /}
      {param text: 'Control a virtual or a LEGO速 MINDSTORMS速 EV3 robot' /}
      {param link: 'ev3' /}
      {param opt_class: 'subheader-orange' /}
      {param opt_button_class: 'adb' /}
    {/call}

    {call .subheader}
